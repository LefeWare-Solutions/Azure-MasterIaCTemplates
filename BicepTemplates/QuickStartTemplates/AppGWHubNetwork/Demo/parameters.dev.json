{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentPrefix":{
      "value": "d"
    },
    "addressSpace":{
      "value": "10.0.0.0/16"
    },
    "subnets": {
      "value": [
        {
          "name": "AppGWSubnet",
          "addressPrefix": "10.0.0.0/27",
          "delegations": [],
          "privateEndpointNetworkPolicies": "Disabled"
        }
      ]
    },
    "sslCertificates":{
      "value": [
        {
          "name": "api-lefewaresolutions-com",
          "properties": {
            "keyVaultSecretId": "https://lws-eastus-kv-common.vault.azure.net/secrets/api-lefewaresolutions-com"
          }
        }
      ]
    },
    "backendAddressPools":{
      "value": [
        {
          "name": "gatewaybackend",
          "properties": {
            "backendAddresses": [
              {
                "fqdn": "api.lefewaresolutions.com"
              }
            ]
          }
        }
      ]
    },
    "backendHttpSettingsCollection":{
      "value": [
        {
          "name": "apimPoolGatewaySetting",
          "properties": {
            "port": 443,
            "protocol": "Https",
            "cookieBasedAffinity": "Disabled",
            "pickHostNameFromBackendAddress": true,
            "requestTimeout": 180
          }
        }
      ]
    },
    "gatewayListenerHostName":{
      "value": "api.lefewaresolutions.com"
    },
    "probes":{
      "value": [
        {
          "name": "apimgatewayprobe",
          "properties": {
            "protocol": "Https",
            "host": "apiManagementProxyCustomHostname",
            "path": "/status-0123456789abcdef",
            "interval": 30,
            "timeout": 120,
            "unhealthyThreshold": 8,
            "pickHostNameFromBackendHttpSettings": false,
            "minServers": 0
          }
        }
      ]
    }
  }
}